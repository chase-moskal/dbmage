{
	"compilerOptions": {
		"rootDir": "s",
		"outDir": "x",
		"target": "es2019",
		"lib": ["es6", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"s/**/*"
	],
	"exclude": [
		"s/_archive/**/*"
	]
}
